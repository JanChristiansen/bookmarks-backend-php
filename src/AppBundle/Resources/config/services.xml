<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app.controller.bookmarks.class">AppBundle\Controller\BookmarksController</parameter>
        <parameter key="app.controller.categories.class">AppBundle\Controller\CategoriesController</parameter>

        <parameter key="app.service.bookmark.class">AppBundle\Services\BookmarkService</parameter>

        <parameter key="app.repository.bookmarks.class">AppBundle\Repository\BookmarkEntityRepository</parameter>
        <parameter key="app.repository.categories.class">AppBundle\Repository\CategoryEntityRepository</parameter>
        <parameter key="app.repository.user.class">AppBundle\Repository\UserEntityRepository</parameter>
    </parameters>

    <services>
        <service class="%app.controller.bookmarks.class%" id="app.controller.bookmarks">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <argument type="service" id="app.repository.bookmarks"/>
            <argument type="service" id="app.service.bookmark"/>
        </service>

        <service class="%app.controller.categories.class%" id="app.controller.categories">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <argument id="app.repository.category" type="service"/>
            <argument type="service" id="app.service.bookmark"/>
        </service>

        <service class="%app.service.bookmark.class%" id="app.service.bookmark" >
            <argument type="service" id="app.repository.category"/>
        </service>

        <service class="AppBundle\Services\UserService" id="app.service.user" >
            <argument type="service" id="app.repository.user"/>
            <argument type="service" id="security.password_encoder"/>
        </service>

        <service class="%app.repository.bookmarks.class%" id="app.repository.bookmarks">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />
            <argument>AppBundle\Entity\Bookmark</argument>
        </service>

        <service class="%app.repository.categories.class%" id="app.repository.category">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />
            <argument>AppBundle\Entity\Category</argument>
        </service>

        <service class="%app.repository.user.class%" id="app.repository.user">
            <factory service="doctrine.orm.entity_manager" method="getRepository" />
            <argument>AppBundle\Entity\User</argument>
        </service>
    </services>
</container>